{
  "name": "@rlm/cli",
  "version": "0.0.1",
  "description": "Command-line interface for RLM (Recursive Language Models)",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "bin": {
    "rlm": "./dist/bin/rlm.js"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run --reporter=basic",
    "test:ci": "vitest run --reporter=json --outputFile=test-results.json",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@rlm/core": "workspace:*",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "picocolors": "^1.1.0",
    "yaml": "^2.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "rlm",
    "cli",
    "llm",
    "recursive",
    "language-model"
  ],
  "license": "MIT"
}
